<div class="settings-page">
    <div class="container mt-4">
      <div class="row">
        <div class="col-md-6 offset-md-3 col-xs-12">
            <h1 class="text-xs-center">你的设置</h1>
            <%= form_for(@user, url: settings_path, method: :put, html: { class: "clearfix" }) do |f| %>
                <%= render "shared/error_messages", target: @user %>
                <div class="form-group mb-3">
                   <%= f.text_field :avatar, class: "form-control", placeholder: "头像url" %>
                </div>
                <div class="form-group mb-3">
                    <%= f.text_field :username, class: "form-control form-control-lg", 
                    placeholder: "你的名字" %>
                </div>
                <div class="form-group mb-3">
                   <%= f.text_area :bio, class: "form-control form-control-lg", 
                    rows: 6, placeholder: "签名" %>
                </div>
                <div class="form-group mb-3">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                        class: "form-control form-control-lg", 
                        disabled: true,
                        placeholder: "邮箱" %>
                </div>
                <%= f.submit "更新设置", class: "btn btn-lg btn-primary float-end" %>

            <% end %>


           
            
            <hr>

            <button class="btn btn-outline-danger" type="submit">
                退出登录
            </button>
        </div>
  
      </div>
    </div>
</div>
