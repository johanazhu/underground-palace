<div class="container">
  <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-2 border-bottom">

    <%= link_to "地宫", articles_path, class: "d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none" %>


      <% if !current_user %>
        <!-- 未登录 -->
        <div class="col-md-3 text-end">
          <%= link_to '注册', register_path, class: 'btn btn-outline-primary me-2' %>
          <%= link_to '登入', login_path, class: 'btn btn-primary' %>
        </div>
      <% else %>
        <!-- 登录 -->
        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
          <li class="nav-item">
            <%= link_to new_article_path, class: "nav-link px-2" do %>
              <i class="fa-solid fa-pen-to-square"></i>&nbsp;新建文章
            <% end %>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link px-2">
              <i class="fa-solid fa-gear"></i>&nbsp;设置
            </a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link px-2">
              <i class="fa-solid fa-face-smile"></i>&nbsp; <%= current_user.username %> 
            </a>
          </li>
        </ul>
      <% end %> 

  </header>
</div>  