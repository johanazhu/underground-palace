

<div class="home-page">
  <div class="container mt-4">
    <div class="row mb-3">
      <div class="col-md-8 themed-grid-col">

        <%= render "feed" %>
        <div id="articles">
          <% if @articles.empty? %>
            <div class="article-preview">目前还没有文章。</div>
          <% else %>
            <% @articles.each do |article| %>
              <%= render article %>
            <% end %>
          <% end %>
        </div>
        
      </div>

      <div class="col-md-4 themed-grid-col">
        <%= render "taglist", tags: @popular_tags %>
      </div>
    </div>
  </div>
</div>